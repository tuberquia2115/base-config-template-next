{
  "name": "base-config-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "prebuild": "npm run lint",
    "build": "next build",
    "lint": "tsc --noEmit --incremental false && eslint .",
    "lint:fix": "prettier --write \"**/*.{ts,tsx,md,js}\" && eslint \"**/*.ts*\" --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,js}\"",
    "format:check": "prettier --check  \"**/*.{ts,tsx,md,js}\"",
    "clean": "rm -rf node_modules",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "14.2.6",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "eslint": "^9.9.0",
    "eslint-config-next": "14.2.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^50.2.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.9",
    "postcss": "^8",
    "prettier": "3.3.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0"
  },
  "overrides": {
    "eslint": "^9.9.0"
  }
}
